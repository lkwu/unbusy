<div id="sign-up-unbusy">
  <div class="container">

    <h2>註冊會員</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>

    <div class="field-singup">
      <div class="field-email">
        <%= f.label :email, "E-mail" %>
        <%= f.email_field :email, autofocus: true, placeholder: "contact@unbusymassage.tech" %>
      </div>

      <div class="field-password">
        <%= f.label :password, "密碼" %>
<!--         <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %> -->

        <%= f.password_field :password, autocomplete: "off", placeholder: "請設定英數8個字元以上的密碼" %>
      </div>

      <div class="field-passwordagain">
        <%= f.label :password_confirmation, "確認密碼" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "再次輸入密碼" %>
      </div>
    </div>

      <div class="actions">
        <%= f.submit "註冊" %>
      </div>
    <% end %>

<!--     <%= render "devise/shared/links" %>
    上面這一行是顯示"Log in"與"Sign in with Facebook" -->

  </div>
</div>


